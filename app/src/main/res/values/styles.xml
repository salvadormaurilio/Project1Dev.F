<resources xmlns:tools="http://schemas.android.com/tools">

    <!-- Base application theme. -->
    <style name="AppTheme.Base.Light" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/primary</item>
        <item name="colorPrimaryDark">@color/primary_dark</item>
        <item name="colorAccent">@color/accent_red</item>


        <item name="android:textColorPrimary">@color/primary_text</item>
        <item name="android:textColorSecondary">@color/secondary_text</item>

        <item name="android:textColor">@color/primary_text</item>
        <item name="android:textColorHint">@color/secondary_text</item>

    </style>

    <!--Tema para trasnparente de Frisca-->
    <style name="AppTheme.Transparent" parent="AppTheme.Base.Light">
        <item name="windowNoTitle">true</item>
        <item name="windowActionBar">false</item>
        <item name="android:windowTranslucentStatus" tools:targetApi="19">true</item>
        <!--<item name="android:windowTranslucentNavigation" tools:targetApi="19">true</item>-->
    </style>


    <style name="AppTheme.Base.Dark" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/primary</item>
        <item name="colorPrimaryDark">@color/primary_dark</item>
        <item name="colorAccent">@color/accent_red</item>

        <item name="android:textColorPrimary">@color/primary_text_black</item>
        <item name="android:textColorSecondary">@color/secondary_text_black</item>
        <item name="android:textColorHint">@color/divider_black</item>
    </style>

    <style name="MyTheme" parent="Base.TextAppearance.AppCompat.Button">
        <item name="android:background">@drawable/background_btn_enter</item>
        <item name="android:textColor">@color/divider_black</item>
    </style>


    <!--Tema para la  pantalla de Minha Conta-->
    <style name="AppTheme.Minha_conta" parent="AppTheme.Base.Light">
        <item name="colorAccent">@color/primary</item>
        <item name="android:textColorPrimary">@color/primary_text_black</item>
        <item name="android:textColorSecondary">@color/secondary_text_black</item>
    </style>

</resources>
